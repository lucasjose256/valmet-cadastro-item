@model LoginModel
@{
    Layout = "_LayoutLogOff";
    ViewData["Title"] = "Retrieve Password";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Recuperar Senha</h1>

<a asp-controller="Login" asp-action="Index" class="btn btn-secondary mb-3">Voltar ao Login</a>

<form asp-controller="Login" asp-action="Retrieve" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Retrieve Password</button>
</form>
