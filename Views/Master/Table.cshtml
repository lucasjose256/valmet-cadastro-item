@model List<UserModel>;

<h1>Usuarios</h1>
<a role="button" class="btn btn-primary btn-block" asp-controller="Usuario" asp-action="Criar"> Adicionar Usuario</a>
<table class="table table-striped table-dark">
    <thead class="thead-dark">

        <tr>
            <th>
                Nome
            </th>

            <th>
                Perfil
            </th>

            <th>
                E-mail
            </th>

            <th>
                Senha
            <th>
        </tr>
    </thead>
    <tbody>

        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Name</td>
                <td>@usuario.Perfil</td>
                <td>@usuario.Email</td>
                <td>@usuario.Password</td>
                <td>
                    <a href="/User/Edit/@usuario.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/User/Delete/@usuario.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>